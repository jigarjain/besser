{
  "name": "besser",
  "version": "0.0.1",
  "description": "An A/B Suite",
  "main": "dist/server.js",
  "engines": {
    "node": ">=12.7.0"
  },
  "scripts": {
    "build": "tsc",
    "serve": "node dist/server.js",
    "start": "npm run build && npm run serve",
    "test": "jest --config=jest.config.json --verbose",
    "test-coverage": "npm run test -- --coverage",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-build\" \"npm run watch-serve\"",
    "watch-serve": "nodemon dist/server.js",
    "watch-build": "tsc -w",
    "watch-test": "npm run test -- --watchAll",
    "migrate-db": "knex migrate:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jigarjain/besser.git"
  },
  "keywords": [
    "ab-testing"
  ],
  "author": "Jigar Jain",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jigarjain/besser/issues"
  },
  "homepage": "https://github.com/jigarjain/besser#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(json)": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-pino-logger": "^4.0.0",
    "express-request-id": "^1.4.1",
    "inversify": "^5.0.1",
    "knex": "^0.19.1",
    "lusca": "^1.6.1",
    "pg": "^7.12.0",
    "pino": "^5.13.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-request-id": "^1.4.0",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/lusca": "^1.6.0",
    "@types/pino": "^5.8.8",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "concurrently": "^4.1.1",
    "eslint": "^6.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
